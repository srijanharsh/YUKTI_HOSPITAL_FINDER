<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ambu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454343"
            android:text="Ambulance Name : "
            android:textSize="10sp"
            android:fontFamily="monospace"
            />
        <TextView
            android:id="@+id/ambulance_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/ambu_name"
            android:text="Ambulance Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            />
    </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ambu_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454343"
                android:text="Ambulance Number : "
                android:textSize="10sp"
                android:fontFamily="monospace"
                />
            <TextView
                android:id="@+id/ambulance_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/ambu_num"
                android:text="Ambulance number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454343"
                android:text="City: "
                android:textSize="10sp"
                android:fontFamily="monospace"
                />
            <TextView
                android:id="@+id/city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/city"
                android:text="City name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>